}
.photo {
    border: 1px solid #505050;
    border-radius: 50%;  /* arredondar as bordas */
}

#title, .subtitle, .post_title{
    color: #FFF;
}

#title {
    font-size: 40px;
    text-transform: uppercase; /* formato das letras, todas maisculas */
}

a { /* "a", pois é a ancora para cada link */
    text-decoration: underline; /* para passar uma linha ao meio de cada link */
    color: blue;
}

.post_title {
    font-size: 16px;
    font-style: italic;
    margin: 0;
    margin-bottom: 15px; /* margem de baixo */
}

.post {
